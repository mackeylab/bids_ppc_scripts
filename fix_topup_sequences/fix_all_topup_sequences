#/bin/bash

#this script goes through the BIDS directory and splits out just the b=0 volume from the TOPUP scan and the last volume from the DWI scan for use in TOPUP
for sub in
do
sub=
ses=session

fieldmap=sub-CBPD0117_ses-01_run-01_epi.nii.gz
echo ${fieldmap}
#the fieldmap is acquired in the j direction
3dcalc -a ${fieldmap}[0] -expr '1*a' -prefix ${sub}_${ses}_dir-PA_run-01_epi.nii.gz
#the dwi scan is acquired in the -j direction, take the last scan
dwi=sub-CBPD0117_ses-01_run-01_dwi.nii.gz
3dcalc -a ${dwi}[$] -expr '1*a' -prefix ${sub}_${ses}_dir-AP_run-01_epi.nii.gz


rm ${sub}----.bval
rm ${sub}----.bvec
rm ${fieldmap_orig}

done